{
	"name": "tightwalk",
	"type": "object",
	"base_resolution": [700, 1000],
	"title": "The Tight Walk P8923",
	"description": "A journeying inwards, and a grief...",
	"link": "http://bit.ly/19iHDuQ",
	"use_mobile_assets": false,
	"property_defaults": {
		"view": "page1"
	},
	"ui": [
		{
			"name": "left",
			"image": "icon-arrow-left.png",
			"size": "50, 50",
			"alignment": "middle,left"
		},
		{
			"name": "right",
			"image": "icon-arrow-right.png",
			"size": "50, 50",
			"alignment": "middle,right"
		},
		{
			"name": "zoom",
			"image": "icon-zoom.png",
			"size": "50, 50",
			"alignment": "bottom,left"
		}
	],
	"ui_actions": {
		"zoom": "toggleZoomMode();"
	},

	"states": [
		{
			"properties": "view:page1",
			"image": "tightwalk_page1.jpg",
			"ui_actions": {
				"right": "setProperty('view', 'page2');"
			}
		},		
		{
			"properties": "view:page2",
			"image": "tightwalk_page2.jpg",
			"ui_actions": {
				"left": "setProperty('view', 'page1');",
				"right": "setProperty('view', 'page3');"
			}
		},		
		{
			"properties": "view:page3",
			"image": "tightwalk_page3.jpg",
			"ui_actions": {
				"left": "setProperty('view', 'page2');",
				"right": "setProperty('view', 'page4');"
			}
		},		
		{
			"properties": "view:page4",
			"image": "tightwalk_page4.jpg",
			"ui_actions": {
				"left": "setProperty('view', 'page3');"			
			}
		}
	]
}